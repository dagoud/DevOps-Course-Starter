[Unit]
Description=My To-Do App
Requires=todoapp.socket

[Service]
User=todoapp-user
Group=devs
WorkingDirectory=/opt/todoapp
EnvironmentFile=/opt/todoapp/.env
ExecStart=/home/ec2-user/.local/bin/poetry run gunicorn --bind 0.0.0.0:80 --error-logfile /var/log/todoapp-error.log --access-logfile /var/log/todoapp-access.log wsgi:app
